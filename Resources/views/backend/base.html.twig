<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}CompanyOS Administration{% endblock %}</title>
    
    {% block stylesheets %}
        {% if app.environment == 'dev' %}
            <script type="module" src="http://localhost:3001/@vite/client"></script>
            <script type="module" src="http://localhost:3001/admin"></script>
        {% else %}
            {{ vite_entry_link_tags('admin') }}
        {% endif %}
    {% endblock %}
    
    {% block head %}{% endblock %}
</head>
<body>
    <div id="companyos-admin">
        {% block content %}
            <!-- Vue.js Administration wird hier gemountet -->
        {% endblock %}
    </div>

    {% block javascripts %}
        {% if app.environment != 'dev' %}
            {{ vite_entry_script_tags('admin') }}
        {% endif %}
    {% endblock %}
    
    {% block scripts %}{% endblock %}
</body>
</html> 